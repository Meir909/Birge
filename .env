# BIRoad Environment Configuration

# Сервер
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:3000

# База данных MongoDB
MONGODB_URI=mongodb://localhost:27017/biroad
MONGODB_TEST_URI=mongodb://localhost:27017/biroad_test

# JWT
JWT_SECRET=biroad-super-secret-jwt-key-2024-change-in-production
JWT_EXPIRE=30d

# SMS сервис (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email сервис (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@biroad.com

# API ключи для внешних сервисов
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
OPENWEATHER_API_KEY=YOUR_OPENWEATHER_API_KEY_HERE

# Redis (для сессий и кэша)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Файловое хранилище
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Безопасность
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Логирование
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Push уведомления
FIREBASE_SERVER_KEY=your-firebase-server-key
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key

# Мониторинг
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# Платежи (если требуется)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Геолокация
GEOCODING_API_KEY=your-geocoding-api-key
DISTANCE_MATRIX_API_KEY=your-distance-matrix-api-key

# Кэширование
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Бэкапы
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# BIRoad специфичные настройки
BIROAD_ENV=development
BIROAD_VERSION=1.0.0
BIROAD_MAX_GROUP_SIZE=8
BIROAD_MIN_DRIVER_AGE=18
BIROAD_MAX_PASSENGER_AGE=18

# Настройки для карт
MAP_DEFAULT_CENTER_LAT=55.7558
MAP_DEFAULT_CENTER_LNG=37.6173
MAP_DEFAULT_ZOOM=12
MAP_MAX_SEARCH_RADIUS=50000

# Настройки для AI
AI_MODEL_CHAT=gemini-pro
AI_MODEL_ROUTE=gemini-pro
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Настройки уведомлений
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# Настройки поездок
TRIP_MAX_DURATION=180
TRIP_MAX_DISTANCE=100000
TRIP_CANCEL_DEADLINE=60
TRIP_START_DEADLINE=15

# Настройки безопасности
SESSION_TIMEOUT=86400
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900

# Настройки производительности
DB_CONNECTION_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000
API_TIMEOUT=10000

# Настройки разработки
DEBUG_MODE=true
MOCK_SMS=true
MOCK_EMAIL=true
ENABLE_CORS=true
